package application;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Stream;

public class Program {

	public static void main(String[] args) {

		List<Integer> list = Arrays.asList(3, 4, 5, 10, 7);
		//cria uma stram a partir da lista
		Stream<Integer> st1 = list.stream().map(x->x*10);
		//toArray converte a stream para um vetor
		System.out.println(Arrays.toString(st1.toArray()));

		//stream.of permite colocar elemnto diretamente entre parenteses
		Stream<String> st2 = Stream.of("Maria", "Alex", "Bob");
		System.out.println(Arrays.toString(st2.toArray()));

		Stream<Integer> st3 = Stream.iterate(0, x -> x + 2);//começa do 0 e soma de 2 em 2
		System.out.println(Arrays.toString(st3.limit(10).toArray()));//possuirá 10 elementos

		Stream<Long> st4 = Stream.iterate(new long[] { 0L, 1L }, p -> new long[] { p[1], p[0] + p[1] }).map(p -> p[0]);
		System.out.println(Arrays.toString(st4.limit(10).toArray()));

	}

}
